{
  "info": {
    "name": "CRM Backend API",
    "description": "Complete CRM Backend API with Authentication, Customers, Leads, Contacts, and Stages",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api"
    },
    {
      "key": "jwt_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Customers",
      "item": [
        {
          "name": "Get All Customers",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/customers",
              "host": ["{{base_url}}"],
              "path": ["customers"]
            }
          }
        },
        {
          "name": "Get Customer by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/customers/1",
              "host": ["{{base_url}}"],
              "path": ["customers", "1"]
            }
          }
        },
        {
          "name": "Create Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"+1234567890\",\n  \"company\": \"ABC Corp\",\n  \"address\": \"123 Main St, City, State\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/customers",
              "host": ["{{base_url}}"],
              "path": ["customers"]
            }
          }
        },
        {
          "name": "Update Customer",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe Updated\",\n  \"email\": \"john.updated@example.com\",\n  \"phone\": \"+1234567891\",\n  \"company\": \"ABC Corp Updated\",\n  \"address\": \"456 Updated St, City, State\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/customers/1",
              "host": ["{{base_url}}"],
              "path": ["customers", "1"]
            }
          }
        },
        {
          "name": "Delete Customer",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/customers/1",
              "host": ["{{base_url}}"],
              "path": ["customers", "1"]
            }
          }
        },
        {
          "name": "Get Customer Contacts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/customers/1/contacts",
              "host": ["{{base_url}}"],
              "path": ["customers", "1", "contacts"]
            }
          }
        },
        {
          "name": "Get Customer Leads",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/customers/1/leads",
              "host": ["{{base_url}}"],
              "path": ["customers", "1", "leads"]
            }
          }
        }
      ]
    },
